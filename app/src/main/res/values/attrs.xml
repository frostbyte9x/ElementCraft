<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text" format="string"/>
    <attr name="res_id" format="integer"/>
    <attr name="height" format="integer"/>
    <attr name="width" format="integer"/>
    <attr name="visibility" format="string"/>
    <attr name="heading_text" format="string"/>
    <attr name="subheading_text" format="string"/>
    <attr name="cancel_text" format="string"/>
    <attr name="confirm_text" format="string"/>
    <attr name="style" format="string"/>
    <attr name="button_image" format="reference"/>

    <declare-styleable name="FlexButton">
        <attr name="text"/>
        <attr name="visibility"/>
        <attr name="style"/>
    </declare-styleable>
    
    <declare-styleable name="FlexButtonV2">
        <attr name="text"/>
        <attr name="button_image"/>
    </declare-styleable>

    <declare-styleable name="cancel_button">
        <attr name="text"/>
    </declare-styleable>

    <declare-styleable name="SectionDivider">
        <attr name="heading_text"/>
        <attr name="subheading_text"/>
        <attr name="divider_visible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextInput">
        <attr name="text"/>
        <attr name="hint" format="string"/>
        <attr name="heading_text"/>
    </declare-styleable>
    
    <declare-styleable name="section_heading">
        <attr name="text"/>
    </declare-styleable>

    <declare-styleable name="amount_description_view">
        <attr name="amount" format="string"/>
        <attr name="description" format="string"/>
    </declare-styleable>

    <declare-styleable name="ActionDecisionPanel">
        <attr name="confirm_text"/>
        <attr name="cancel_text"/>
    </declare-styleable>

    <declare-styleable name="ImgView">
        <attr name="res_id"/>
        <attr name="height"/>
        <attr name="width"/>
    </declare-styleable>

    <declare-styleable name="ListItem">
        <attr name="heading_text"/>
        <attr name="subheading_text"/>
        <attr name="image_visibility" format="string"/>
        <attr name="button_visibility" format="string"/>
        <attr name="button_text" format="string"/>
        <attr name="res_id"/>
        <attr name="height"/>
        <attr name="width"/>
    </declare-styleable>

    <declare-styleable name="confirmation_dialog">
        <attr name="heading_text"/>
        <attr name="message_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="check_box">
        <attr name="text"/>
    </declare-styleable>

    <declare-styleable name="TintedIconView">
        <attr name="res_id"/>
        <attr name="style"/>
    </declare-styleable>

    <declare-styleable name="TintedTextView">
        <attr name="text"/>
        <attr name="style"/>
    </declare-styleable>
</resources>