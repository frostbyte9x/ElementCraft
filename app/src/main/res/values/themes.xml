<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elementcraft" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/azure</item>
        <item name="colorPrimaryVariant">@color/azure</item>
        <item name="colorOnPrimary">@color/azure</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azure</item>
        <item name="colorSecondaryVariant">@color/azure</item>
        <item name="colorOnSecondary">#000</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textPrimary">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSecondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="sectionHeadings">
        <item name="android:textSize">16sp</item>
<!--        <item name="android:textColor">@color/secondaryTextColor</item> &lt;!&ndash;#79758D&ndash;&gt;-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonPrimary">
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="buttonPrimaryText">
        <item name="android:textColor">@color/buttonPrimaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="spinnerBackgroundTint">
        <item name="android:backgroundTint">#000</item>
    </style>
</resources>