<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elementcraft" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textPrimary">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSecondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="sectionHeadings">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item> <!--#79758D-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonPrimary">
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="buttonPrimaryText">
        <item name="android:textColor">@color/buttonPrimaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>



    <style name="spinnerBackgroundTint">
        <item name="android:backgroundTint">#000</item>
    </style>
</resources>